<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="wrap_content">


        <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp" app:srcCompat="@drawable/ic_delete_black_24dp"
                android:id="@+id/imgSil"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintTop_toBottomOf="@+id/imgKopyala"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"/>
        <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp" app:srcCompat="@drawable/ic_crop_free_black_24dp"
                android:id="@+id/imgKopyala"

                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"
                app:layout_constraintTop_toTopOf="@+id/tvBaslik"/>
        <ImageView
                android:id="@+id/imgManzara"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:srcCompat="@drawable/r4"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvBaslik"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="@+id/imgManzara"
                app:layout_constraintStart_toEndOf="@+id/imgManzara" android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvAciklama" android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tvBaslik"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgSil"
                app:layout_constraintStart_toEndOf="@+id/imgManzara" android:layout_marginStart="16dp"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>